<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cn.edu.cuz.zhengjun.words.view.RegisterController">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <TextField fx:id="registerNameTf" GridPane.columnIndex="1"/>
        <Button mnemonicParsing="false" onAction="#onRegiterButtonClicked" text="注册" GridPane.columnIndex="1"
                GridPane.rowIndex="2"/>
        <Label text="登录名"/>
        <Label text="密码" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button mnemonicParsing="false" onAction="#onLoginButtonClicked" text="已有账号，去登陆" GridPane.columnIndex="1"
                GridPane.rowIndex="4"/>
    </children>
</GridPane>
